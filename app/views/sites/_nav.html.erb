<ul class="tabs">
  <li class="sites-show site_tools-index"><%= link_to "Tools", site_tools_path(@site) %></li> 
  <% if @site.articles_count > 0 %>
    <li class="sites-bookmarks"><a href="<%= bookmarks_site_path(@site)%>" class="bookmarks">Bookmarks</a></li> 
  <% end %>
  <% if @tool %>
    <li class="current"><a href="#"><%= @tool.name %></a></li>
  <% end %>

  <% if user_signed_in? %>
    <% if current_user.claimed?(@site) %>
      <li class="right site-edit"><%= link_to "Edit", edit_site_path(@site) %></li>
      <li class="right site_tools-manage"><%= link_to "Manage Tools", manage_site_tools_path(@site) %></li>
    <% else %>
      <li class="right site_tools-manage"><%= link_to "Add Tools", manage_site_tools_path(@site) %></li>
      <li class="right site_claims-new"><%= link_to "Claim", new_site_claim_path(@site) %></li>  
    <% end %>

    <% if current_user.admin? %>
      <li class="right"><%= link_to "Delete", @site, :method => :delete, :confirmation => "Are you sure you want to delete this site." %></li>
    <% end %>
  <% else %>
    <li class="right site_claims-new"><%= link_to "Claim", new_site_claim_path(@site) %></li>  
    <li class="right site_tools-manage"><%= link_to "Add Tools", manage_site_tools_path(@site) %></li>
  <% end %>
</ul>