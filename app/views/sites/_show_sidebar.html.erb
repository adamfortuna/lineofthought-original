<sidebar>
  <%= render :partial => "bookmarks/related", :object => @articles if (@site.articles.size > 0) && @articles && @articles.length > 0 %>
  <%= render :partial => "sites/similar", :object => @similar_sites if @similar_sites %>  
  <% if user_signed_in? %>
  <aside>
    <h3>Add an Bookmark</h3>
    <p>Know of a blog post or video about <%= @site.title %>?</p>
    <p><%= link_to "Add an Bookmark about #{@site.title}", new_bookmark_path %></p>
  </aside>
  <% end %>
</sidebar>