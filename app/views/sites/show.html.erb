<% title "#{@site.title}" %>
<section id="content" class="main site">
  <img src="http://snapshots.bloggerschoiceawards.com/images?url=<%=@site.url%>&f=jpg&h=147&w=201&default=http://localhost:3000/images/screenshot.png" class="screenshot small" />
  
  <section class="site_details group">
    <h2 class="title"><%= @title %></h2>
    <%= raw show_breadcrumbs "#{link_to 'sites', sites_path} > #{@site.title}" %>
    <p clas="external"><%= link_to @site.url, @site.url %></p>
    <% if @site.excerpt %>
      <p><%= @site.excerpt %></p>
    <% elsif @site.tools_count > 0 %>
      <p>We know of <%= pluralize(@site.tools_count, "tool") %> used on this site.</p>
    <% end %>
    <ul class="ranks">
      <li><%= raw global_alexa_rank(@site.alexa_global_rank) %></li>
      <li><%= raw google_pagerank(@site.google_pagerank) %></li>
    </ul>
  </section>

  <% if !@site.description.blank? && (@site.description != @site.excerpt) %>
    <section>
      <h3>About <%= @site.title %></h3>
      <p><%= @site.description %></p>
    </section>
  <% end %>

  <section>
    <h3>Tools used on <%= @site.title %></h3>
    <% if @site.tools_count > 0 %>
    <ul class="usings">
      <%= render :partial => 'usings/using_tool', :collection => @site.usings.by_sites_count %>
    </ul>
    <% else %>
      <p>We don't know what tools this site uses. <%= link_to "Help us fill in the gaps.", edit_site_tools_path(@site) %></p>
    <% end %>
  </section>
</section>

<sidebar>
  <aside>
    <ul>
      <li><%= link_to "Edit this Site", edit_site_path(@site) %></li>
      <li><%= link_to "Remove this Site", site_path(@site, :method => :delete) %></li>
      <li><%= link_to "Manage Tools for this Site", edit_site_tools_path(@site) %></li>
    </ul>
  </aside>
</sidebar>