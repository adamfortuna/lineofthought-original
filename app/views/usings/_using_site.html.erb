<li class="site group ind">
  <div class="title">
    <h4><a href="<%= site_path(using_site.site) %>"><% if using_site.site.has_favicon? %><img src="<%= using_site.site.full_favicon_url %>"   class="favicon" /><% end %><%= using_site.site.title%></a><span class="url"><%= using_site.site.url %></span></h4>
    <ul class="tools group">
      <% if using_site.site.tools_count > 0 %>
        <% if using_site.site.tools_count > 2 %>
          <li><%= link_to "#{pluralize(using_site.site.tools_count-2, 'more tool')}", using_site.site %></li>
        <% end %>
        <%= raw site_tools(using_site.site) %>
      <% end %>
      <li><%= link_to "comments", site_tool_path(using_site.site, @tool), :class => "comments" %></li>
    </ul>
  </div>
  <% unless using_site.description.blank? %><p><%= using_site.description %></p><% end %>
</li>