<% cache(["partial-using-site", using_site], :expires_in => 15.minutes) do %>
<li class="site group ind">
  <a href="<%= site_path(using_site.site) %>" class='screenshot'><img src="http://localhost:3000/images/screenshot.png" /></a>

  <div class="details">
    <div class="title">
      <h4><%= link_to using_site.site.title, using_site.site %></h4>
      <ul class="count">
        <li class="sites"><%= link_to pluralize(using_site.site.tools_count, "tool"), using_site.site %></li>
        <%= raw global_alexa_rank(using_site.site.alexa_global_rank) %>
        <%= raw google_pagerank(using_site.site.google_pagerank) %>
      </ul>
      <p clas="description"><%= using_site.description %></p>

      <% if using_site.site.tools_count > 0 %>
        <ul class="tools">
          <%= raw site_tools(using_site.site) %>
          <% if using_site.site.tools_count > 2 %>
            <li><%= link_to "#{pluralize(using_site.site.tools_count-2, 'more tool')}", using_site.site %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</li>
<% end %>