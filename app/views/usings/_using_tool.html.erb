<% cache(["partial-using-tool", using_tool], :expires_in => 15.minutes) do %>
<li class="tool group ind using">
  <div class="details">
    <div class="title">
      <h4><%= link_to using_tool.tool.name, using_tool.tool %></h4>
      <ul class="count">
        <%= raw tool_sites_count(using_tool.tool) %>
        <%= raw tool_articles_count(using_tool.tool) %>
      </ul>
      <% unless using_tool.description.blank? %><p><%= using_tool.description %></p><% end %>

      <ul class="using">
        <%= raw tool_categories(using_tool.tool) %>
      </ul>
    </div>
  </div>
</li>
<% end %>