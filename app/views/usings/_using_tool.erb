<%
  site = @site || using_tool.site
  tool = @tool || using_tool.tool
%>
<li class="tool group ind">
  <div class="title group">
    <h4><% if tool.has_favicon? %><a href="<%= tool_path(tool) %>" class="favicon"><img src="<%= tool.full_favicon_url %>" /></a><% end %><%= link_to tool.name, tool %></h4>
    <ul class="mini-categories">
      <%= raw tool_categories(tool, params[:format]) %>
      <li><%= link_to "comments", site_tool_path(site, tool, :format => params[:format]), :class => "comments" %></li>
    </ul>
  </div>
  <% if using_tool.description.blank? %>
    <p class="about"><%= truncate(tool.description, :length => 140) %></p>
  <% else %>
    <p><%= using_tool.description %></p>
  <% end %>
  <%= raw using_bookmarks(using_tool, 2, params[:format]) if using_tool.bookmarks_count > 0 %>
</li>