<% title "Sign In" %>

<section id="content" class="main">
  <h2><%= @title %></h2>
  <section>
    <p><a href="<%= Settings.root_url %>/auth/twitter">Sign In with Twitter</a></p>
    <p><a href="<%= Settings.root_url %>/auth/facebook">Sign In with Facebook</a></p>
  </section>
  <section>
    <%= semantic_form_for resource, :as => resource_name, :url => user_session_path do |form| %>
      <%= form.inputs do %>
        <%= form.input :email, :as => :string, :required => true %>
        <%= form.input :password, :as => :password, :required => true %>
        <%= form.input :remember_me, :as => :boolean %>
      <% end %>
      <%= form.buttons do %>
        <%= form.commit_button :label => "Login" %>
      <% end %>
    <% end %>
  </section>
</section>

<section class="sidebar">
  <%= render :partial => "devise/shared/links" %>
</section>