<% title "Update Your Account" %>

<section id="content" class="main">
  <h2><%= @title %></h2>
  <section>
    <%= semantic_form_for resource, :as => resource_name, :url => registration_path(resource_name) do |form| %>
      <%= form.inputs do %>
        <%= form.input :email, :as => :string, :required => true %>
        <%= form.input :password, :as => :password, :required => true %>
        <%= form.input :password_confirmation, :as => :password, :required => true %>
        <%= form.input :current_password, :as => :password %>
      <% end %>
      <%= form.buttons do %>
        <%= form.commit_button :label => "Update" %>
      <% end %>
    <% end %>
  </section>
</section>

<sidebar>
  <aside>
    <h3>My Account</h3>
    <ul class="lst">
      <li><a href="#">My Sites</a></li>
      <li><a href="#">My Tools</a></li>
      <li><a href="#">My Bookmarks</a></li>
    </ul>
  </aside>
  <aside>
    <h3>Delete My Account</h3>
    <p>Unhappy? <%= link_to "Delete my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete %>.</p>
    <p>Canceling your account will not remove your work. It'll de-associate it with you, and all traces of your identify will be erased.
  </aside>
</sidebar>