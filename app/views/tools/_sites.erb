<section class="tab">
  <% if @tool.sites_count > 0 %>
  <div class="title_bar group">
    <h3>We know of <%= pluralize(@tool.sites_count, "site") %> using <%= @tool.name %>.</h3>
    <div id="sorting">
      <p>Sorting by <%= sorting_name(params[:sort]) %> <a href="#" class="change_sorting"></a></p>
      <ul class="options" style="display:none;">
        <li><%= link_to "Sort by Alexa Rank", tool_sites_path(@tool, :sort => :alexa_asc) %></li>
        <li><%= link_to "Sort by Google PageRank", tool_sites_path(@tool, :sort => :google_desc) %></li>
        <li><%= link_to "Sort by Site Name", tool_sites_path(@tool, :sort => :sitename_asc) %></li>
        <li><%= link_to "Sort by Number of Tools", tool_sites_path(@tool, :sort => :tools_desc) %></li>
      </ul>
    </div>
  </div>
  <ul class="usings sites">
    <%= render :partial => 'usings/using_site', :collection => sites %>
  </ul>
  <%= will_paginate sites %>
  <% else %>
    <p class="empty_message">We don't know of any sites using <%= @tool.name %>.</p>
    <p class="empty_message">You can <%= link_to "add some sites now", new_tool_site_path(@tool, :format => params[:format]) %> if you know of any.</p>
  <% end %>
</section>