<% title "List of sites using #{@tool.name}" %>

<section id="content" class="main tool">
  <% cache(["full", @tool]) do %>
    <%= render 'header' %>
  <% end %>
  
  <ul class="tabs">
    <li class="current"><a href="#" class="sites">Sites</a></li> 
    <% if @tool.articles_count > 0 %><li><a href="#" class="articles">Articles</a></li><% end %>
    <% if @tool.jobs_count > 0 %><li><a href="#" class="jobs">Jobs</a></li><% end %>
    <% if @tool.books_count > 0 %><li><a href="#" class="books">Books</a></li><% end %>    
  </ul>
  
  <%= render :partial => "sites", 
             :object => @tool.usings.by_alexa_site.paginate(:page => params[:page] || 1, 
                                                            :per_page => params[:per_page] || 25) %>
</section>

<sidebar>
  <aside>
    <h3>Similar Tools</h3>
    <ul class="lst">
      <li><a href="#"><em>Javascript</em>Prototype</a></li>
      <li><a href="#"><em>Javascript</em>MooTools</a></li>
      <li><a href="#"><em>Javascript</em>YUI</a></li>
    </ul>
  </aside>
  <aside>
    <h3>Admin Options</h3>
    <ul class="lst">
      <li><%= link_to "edit", edit_tool_path(@tool) %></li>
      <li><%= link_to "add sites", new_tool_site_path(@tool) %></li>
    </ul>
  </aside>
</sidebar>