<% cache(["partial", tool], :expires_in => 15.minutes) do %>
<li class="tool group ind">
  <a href="<%= tool_path(tool) %>" class="screenshot"><img src="http://localhost:3000/images/screenshot.png" /></a>

  <div class="details">
    <div class="title">
      <h4><%= link_to tool.name, tool %></h4>
      <ul class="count">
        <li class="sites"><%= link_to pluralize(tool.sites_count, "site"), tool_path(tool) %></li>
        <li class="links"><%= link_to pluralize(0, "article"), tool_path(tool) %></li>
      </ul>
      <%= content_tag(:p, truncate(tool.description, :length => 140)) unless tool.description.blank? %>
    </div>
  
    <div class="content">
      <% if tool.sites_count > 0 %>
        <ul class="sites">
          <%= raw tool_sites(tool) %>
          <% if tool.sites_count > 2 %>
            <li><%= link_to "#{pluralize(tool.sites_count-2, 'more site')}", tool %></li>
          <% end %>
        </ul>
      <% end %>
  
      <ul class="categories">
        <%= raw tool_categories(tool) %>
      </ul>
    </div>
  </div>
</li>
<% end %>