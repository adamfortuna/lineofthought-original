<% title "Bookmark - #{@bookmark.title}" %>

<section id="content" class="main tool">
  <%= render 'bookmarks/header' %>

  <section class="tab">
    <div class="title_bar group">
      <h3><%= raw bookmark_references(@bookmark) %></h3>
    </div>
    <ul class="sublist usings sites tools">
      <%= render :partial => 'usings/using_site', :collection => @bookmark.usings %>
      <%= render :partial => 'usings/using_tool', :collection => @bookmark.usings %>
    </ul>
    
    
    <%= render :partial => 'shared/disqus', :object => "bookmark_#{@bookmark.id}" %>
  </section>
</section>
<%= render 'show_sidebar' %>


<% javascript do %>
$(function(){  
  $("ul.actions li.bookmarks a").click(function(e) {
    var target = $(e.currentTarget),
        id = target.attr("data-usingid");
    $(".bookmarks_for_"+id).toggle();
    e.preventDefault();
  });
});
<% end %>